{
  "expo": {
    "name": "InMeet",
    "owner": "sean_hsieh",
    "slug": "inmeet-react-native",
    "originalFullName": "@sean_hsieh/inmeet-react-native",
    "version": "1.2.3",
    "orientation": "portrait",
    "icon": "./assets/images/logo/icon.png",
    "scheme": "com.inmeet.inmeet",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splashScreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#383A44"
    },
    "facebookScheme": "fb799427287833790",
    "facebookAppId": "799427287833790",
    "facebookDisplayName": "InMeet",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "bundleIdentifier": "com.inmeet.inmeet",
      "googleServicesFile": "./GoogleService-Info.plist",
      "splash": {
        "image": "./assets/images/splashScreen.png",
        "resizeMode": "contain",
        "backgroundColor": "#383A44"
      },
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSPhotoLibraryUsageDescription": "InMeet 需要存取你的相片，以便創建頭貼、貼文、個人資料",
        "NSCameraUsageDescription": "允許系統存取 InMeet 上和相機相關的功能，例如拍攝個人頭貼",
        "NSMicrophoneUsageDescription": "此功能需要麥克風存取權，同意麥克風權限",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "推薦內容將根據你所在位置顯示",
        "NSLocationAlwaysUsageDescription": "推薦內容將根據你所在位置顯示"
      },
      "buildNumber": "22"
    },
    "android": {
      "versionCode": 42,
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#383A44"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ],
          "data": {
            "scheme": "com.inmeet.inmeet"
          }
        }
      ],
      "package": "com.inmeet.inmeet",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "1cca05d6-795e-4e76-ba48-021b15079e01"
      }
    },
    "plugins": [
      [
        "expo-facebook",
        {
          "userTrackingPermission": false
        }
      ],
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-notifications",
        {}
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ]
  }
}
