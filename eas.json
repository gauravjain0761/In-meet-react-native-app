{
  "cli": {
    "version": ">= 2.3.0",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "base": {
      "env": {}
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "channel": "preview",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk",
        "image" : "ubuntu-18.04-jdk-11-ndk-r19c"
      },
      "distribution": "internal"
    },
    "preview2": {
      "android": {
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "preview3": {
      "developmentClient": true
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "ios": {
        "credentialsSource": "local"
      },
      "android": {
        "buildType": "apk",
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      }
    },
    "devclient": {
      "extends": "base",
      "releaseChannel": "default",
      "developmentClient": true,
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "credentialsSource": "local"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
